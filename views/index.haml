<!doctype html>
%html
  %head
    %title Boardgame Geek Randomizer!
    %meta{"http-equiv" => "content-type", :content => "text/html;charset=UTF-8"}
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js",
      :type => "text/javascript"}
    %script{:src => "app.js", :type => "text/javascript"}
  %body

%h1 Tonight's Game

%form{:id => "game_form"}
  %p
    Username:
    %input{:type => "text", :id => "username"}

  %p
    Number of options:
    %input{:type => "text", :id => "num_games"}

  %p
    Number of players:
    %input{:type => "text", :id => "num_players"}

  %p
    Playtime:
    %input{:type => "text", :id => "playtime"}

  %input{:id => "pick", :type => "button", :value => "Let's See Some Games"}

%div{:id => "games"}
